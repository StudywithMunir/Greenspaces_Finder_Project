@page "/green-space-details"

<div class="details-container">

    <h1 class="details-title">Green Space Details</h1>

    <div class="details-content">
        <!-- Park Name -->
        <div class="detail-item">
            <h3>Park Name:</h3>
            <p>Park XYZ</p>
        </div>

        <!-- Location -->
        <div class="detail-item">
            <h3>Location:</h3>
            <p>123 Main Street, City, State</p>
        </div>

        <!-- Hours of Operation -->
        <div class="detail-item">
            <h3>Hours of Operation:</h3>
            <p>Monday-Friday: 8:00 AM - 6:00 PM</p>
        </div>

        <!-- Amenities -->
        <div class="detail-item">
            <h3>Amenities:</h3>
            <p>Picnic areas, Playground, Walking trails</p>
        </div>

        <!-- Rules -->
        <div class="detail-item">
            <h3>Rules:</h3>
            <p>No littering, No pets, No alcohol</p>
        </div>
    </div>

    <h2 class="ratings-title">User Ratings and Reviews</h2>

    <!-- User Reviews -->
    <div class="user-reviews">
        <!-- Review 1 -->
        <div class="review">
            <h3>User 1</h3>
            <p>Great place to relax and enjoy nature. The park is well-maintained, and the staff is friendly.</p>
            <div class="rating">4.5 stars</div>
        </div>

        <!-- Review 2 -->
        <div class="review">
            <h3>User 2</h3>
            <p>Nice park with beautiful surroundings. Clean and safe for kids to play.</p>
            <div class="rating">4.0 stars</div>
        </div>
    </div>

    <!-- Leave Review Section -->
    <div class="leave-review">
        <h3>Leave a Review</h3>
        <!-- Add form for leaving a review -->
        <!-- Name, Rating, Comment, Submit button, etc. -->
    </div>

    <!-- Back Button -->
    <a href="/search-results" class="back-button">Back to Search Results</a>
</div>

@code {
    // C# code for fetching and displaying park details
    // You can bind these details to the HTML elements

    // Sample data for park details
    private string ParkName = "Park XYZ";
    private string Location = "123 Main Street, City, State";
    private string HoursOfOperation = "Monday-Friday: 8:00 AM - 6:00 PM";
    private string Amenities = "Picnic areas, Playground, Walking trails";
    private string Rules = "No littering, No pets, No alcohol";

    // Sample user reviews and ratings
    private List<Review> UserReviews = new List<Review>
    {
        new Review { UserName = "User 1", Comment = "Great place to relax and enjoy nature. The park is well-maintained, and the staff is friendly.", Rating = 4.5 },
        new Review { UserName = "User 2", Comment = "Nice park with beautiful surroundings. Clean and safe for kids to play.", Rating = 4.0 },
    };

    // C# class to represent a user review
    public class Review
    {
        public string UserName { get; set; }
        public string Comment { get; set; }
        public double Rating { get; set; }
    }
