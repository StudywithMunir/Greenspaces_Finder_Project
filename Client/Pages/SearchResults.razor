<style>
    /* Add your CSS styles for Search Results Page here */
    .search-results-container {
        padding: 20px;
    }

    .search-results-title {
        color: #606c38;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .filter-options {
        margin-bottom: 20px;
    }

        .filter-options label {
            margin-right: 10px;
            color: #606c38;
        }

        .filter-options select {
            padding: 5px;
            border: 1px solid #606c38;
            border-radius: 5px;
            background-color: #fefae0;
            color: #283618;
        }

    .search-results-list {
        display: flex;
        flex-wrap: wrap;
    }

    .search-result {
        width: 300px;
        border: 1px solid #606c38;
        padding: 10px;
        margin: 10px;
        border-radius: 5px;
    }

    .green-space-location {
        color: #606c38;
        font-size: 1rem;
    }

    .green-space-description {
        color: #606c38;
        font-size: 1rem;
    }

    a {
        color: #283618;
        text-decoration: none;
        font-weight: bold;
    }

    /* Pagination Styles */
    .pagination {
        margin-top: 20px;
        display: flex;
        justify-content: center;
    }

    .pagination-link {
        margin: 0 5px;
        padding: 5px 10px;
        background-color: #606c38;
        color: #fefae0;
        border-radius: 5px;
        text-decoration: none;
    }

        .pagination-link:hover {
            background-color: #283618;
        }
