<LayoutView Layout="typeof(MainLayout)">
    <Navigation />
    <div class="landing-container">
        
       @*  <NavMenu /> *@
       
        <div class="landing-content">
            <h1 class="landing-title">Welcome to Green Spaces Finder</h1>
            <p class="app-description">Discover the beauty of nature around you.</p>

            <div class="search-bar">
                <input type="text" placeholder="Enter location or use your current location" class="search-input" />
                <button class="search-button">Search</button>
            </div>

            <div class="image-slider">
                <img src="@gardenImages[currentImage]" alt="Garden" class="slider-image" />
                <button class="slider-prev" @onclick="ShowPreviousImage">Previous</button>
                <button class="slider-next" @onclick="ShowNextImage">Next</button>
            </div>
        </div>
    </div>

</LayoutView>

@code {
    private int currentImage = 0;

    private List<string> gardenImages = new List<string>
    {
        "images/pic2.jpg",
        "images/garden_landing.jpg",
        "images/garden_landing2.jpg",
        "images/pic1.jpg",
        "images/pic3.jpg",


    };

    private void ShowNextImage()
    {
        currentImage = (currentImage + 1) % gardenImages.Count;
    }

    private void ShowPreviousImage()
    {
        currentImage = currentImage > 0 ? currentImage - 1 : gardenImages.Count - 1;
    }
}


<style>
    body {
        margin: 0;
        padding: 0;
    }

    .landing-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin-top: 45px; /* Add margin to create space above the navbar */
    }

    .landing-title {
        color: #606c38;
        font-size: 2.5rem;
        text-align: center;
        margin-top: 350px;
    }

    .app-description {
        color: #606c38;
        font-size: 1.2rem;
        margin-bottom: 30px;
        text-align: center;
    }

    .search-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 10px 0;
    }

    .search-input {
        width: 70%;
        padding: 10px;
        border: 1px solid #606c38;
        border-radius: 5px 0 0 5px;
        font-family: Arial, sans-serif;
    }

    .search-button {
        background-color: #283618;
        color: #fefae0;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 0 5px 5px 0;
    }

        .search-button:hover {
            background-color: #606c38;
        }

    .image-slider {
        max-width: 100%;
        text-align: center;
        margin: 20px 0;
        position: relative;
    }

    .slider-image {
        max-width: 100%;
        height: auto;
    }

    .slider-prev,
    .slider-next {
        background-color: #283618;
        color: #fefae0;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 1;
    }

    .slider-prev {
        left: 10px;
    }

    .slider-next {
        right: 10px;
    }

</style>